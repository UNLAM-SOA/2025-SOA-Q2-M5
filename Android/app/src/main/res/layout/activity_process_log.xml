<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343A47"
    tools:context=".ProcessLogActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_log"
        android:textColor="#F2ECECFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <ImageButton
        android:id="@+id/btn_back_process_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/readable_btn_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F2ECECFF"
        android:text="Reset All Statistics"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.894" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintBottom_toTopOf="@id/button2"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clsv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:text="S1 value:"
                    android:textColor="#F2ECECFF"
                    android:textSize="18sp"
                    app:layout_constraintBaseline_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="18dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="148dp"
                    android:text="value"
                    android:textColor="#F2ECECFF"
                    android:textSize="18sp"
                    app:layout_constraintBaseline_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="18dp" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="130dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="236dp"
                    android:backgroundTint="#F2ECECFF"
                    android:gravity="center"
                    android:text="Reset S1"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="6dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="36dp"
                    android:text="S2 value:"
                    android:textColor="#F2ECECFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView4" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="148dp"
                    android:layout_marginTop="36dp"
                    android:text="value"
                    android:textColor="#F2ECECFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView5" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="130dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="236dp"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="#F2ECECFF"
                    android:text="Reset S2"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/button1" />

                <TextView
                    android:id="@+id/txt_emergency_stops"
                    android:layout_width="178dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="36dp"
                    android:text="Number of emergency stops:"
                    android:textColor="#F2ECECFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView6" />

                <TextView
                    android:id="@+id/txt_value_emergency_stops"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="236dp"
                    android:layout_marginTop="30dp"
                    android:text="value"
                    android:textColor="#F2ECECFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/button3" />

                <TextView
                    android:id="@+id/txt_last_emergency_stop_date"
                    android:layout_width="178dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="36dp"
                    android:text="Last emergency stop' date:"
                    android:textColor="#F2ECECFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_emergency_stops" />

                <TextView
                    android:id="@+id/txt_value_last_emergency_stop_date"
                    android:layout_width="89dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="236dp"
                    android:layout_marginTop="40dp"
                    android:text="value"
                    android:textColor="#F2ECECFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_value_emergency_stops" />

                <TextView
                    android:id="@+id/txt_manual_stops"
                    android:layout_width="178dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="36dp"
                    android:text="Number of manual stops:"
                    android:textColor="#F2ECECFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_last_emergency_stop_date" />

                <TextView
                    android:id="@+id/txt_value_manual_stops"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="236dp"
                    android:layout_marginTop="58dp"
                    android:text="value"
                    android:textColor="#F2ECECFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_value_last_emergency_stop_date" />

                <TextView
                    android:id="@+id/txt_last_manual_stop_date"
                    android:layout_width="178dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="40dp"
                    android:text="Last manual stop' date:"
                    android:textColor="#F2ECECFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_manual_stops" />

                <TextView
                    android:id="@+id/txt_value_last_manual_stop_date"
                    android:layout_width="89dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="236dp"
                    android:layout_marginTop="42dp"
                    android:text="value"
                    android:textColor="#F2ECECFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_value_manual_stops" />

                <TextView
                    android:id="@+id/txt_amount_blue_prods"
                    android:layout_width="178dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="36dp"
                    android:text="Amount of processed blue products:"
                    android:textColor="#F2ECECFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_last_manual_stop_date" />

                <TextView
                    android:id="@+id/txt_value_amount_blue_prods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="236dp"
                    android:layout_marginTop="58dp"
                    android:text="value"
                    android:textColor="#F2ECECFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_value_last_manual_stop_date" />

                <TextView
                    android:id="@+id/txt_amount_red_prods"
                    android:layout_width="178dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="36dp"
                    android:text="Amount of processed red products:"
                    android:textColor="#F2ECECFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_amount_blue_prods" />

                <TextView
                    android:id="@+id/txt_value_amount_red_prods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="236dp"
                    android:layout_marginTop="58dp"
                    android:text="value"
                    android:textColor="#F2ECECFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_value_amount_blue_prods" />

                <TextView
                    android:id="@+id/txt_amount_unknown_prods"
                    android:layout_width="178dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="36dp"
                    android:text="Amount of processed unknown products:"
                    android:textColor="#F2ECECFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_amount_red_prods" />

                <TextView
                    android:id="@+id/txt_value_amount_unknown_prods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="236dp"
                    android:layout_marginTop="58dp"
                    android:text="value"
                    android:textColor="#F2ECECFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_value_amount_red_prods" />

                <TextView
                    android:id="@+id/txt_time_online"
                    android:layout_width="178dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="36dp"
                    android:text="Time online:"
                    android:textColor="#F2ECECFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_amount_unknown_prods" />

                <TextView
                    android:id="@+id/txt_value_time_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="236dp"
                    android:layout_marginTop="37dp"
                    android:text="value"
                    android:textColor="#F2ECECFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_value_amount_unknown_prods" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>